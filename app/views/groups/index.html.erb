<%= link_to new_group_path, class: "text-dark" do %>
      <i class="fas fa-plus">グループ作成</i>
    <% end %>
    <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>
            <%= link_to group_path(group) do %>
              <%= group.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>